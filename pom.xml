		<!--  TODO:  A new release of the maven-jaxb2-plugin, 0.14.1, is expected soon.  Upgrade to the new release when it becomes available -->
		<maven.jaxb2.plugin.version>0.14.0</maven.jaxb2.plugin.version>
	</properties>

	<dependencies>
 
	    <dependency>
			<groupId>org.planit</groupId>
			<artifactId>PlanIt</artifactId>
			<version>0.0.1-SNAPSHOT</version>
	    </dependency>

	    <dependency>
			<groupId>org.planit.basiccsv</groupId>
			<artifactId>BasicCsv</artifactId>
			<version>0.0.1-SNAPSHOT</version>
	    </dependency>
